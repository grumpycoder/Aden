@model WorkItem

@if (!Model.WorkItemImages.Any())
{
    <h3>No Images</h3>
}
else
{

    <div class="row">
        <div class="col-md-12">
            <label class="control-label">Description</label>
            <label class="text-primary">@Model.Description</label>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div>
                <label class="control-label">Screen Captures</label>
            </div>
            <div class="carousel slide" id="imageCarousel">
                <div class="carousel-inner">
                    @for (var i = 0; i < Model.WorkItemImages.Count; i++)
                    {
                        <div class="item @(i == 0 ? "active" : "")">

                            <div class="thumbnail">
                                <a href="data:image;base64,@Convert.ToBase64String(Model.WorkItemImages[i].Image)" download="error.png">
                                    <img src="data:image;base64,@Convert.ToBase64String(Model.WorkItemImages[i].Image)" download="filename.jpg" class="img-responsive"/>
                                </a>
                            </div>

                        </div><!-- /Slide -->
                    }
                </div>

                <nav>
                    <ul class="control-box pager">
                        <li><a data-slide="prev" href="#imageCarousel" class=""><i class="fa fa-chevron-left"></i></a></li>
                        <li><a data-slide="next" href="#imageCarousel" class=""><i class="fa fa-chevron-right"></i></a></li>
                    </ul>
                </nav>
                <!-- /.control-box -->
            </div><!-- /#imageCarousel -->
        </div>
    </div>

}