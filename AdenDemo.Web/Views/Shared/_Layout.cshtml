<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    
    <link href="~/src/scss/bootstrap/bootstrap.css" rel="stylesheet" />
    <!-- DevExtreme themes -->
    @*<link rel="stylesheet" type="text/css" href="~/css/dx.common.css" />
    <link rel="stylesheet" type="text/css" href="~/css/dx.light.css" />*@
    <link href="~/css/dx-bundle.css" rel="stylesheet" />
    

    <link href="~/css/font-awesome.css" rel="stylesheet" />
    @*<link href="~/css/bootstrap-dialog.min.css" rel="stylesheet" />*@
    @*<link href="~/css/bootstrap-dialog.min.css" rel="stylesheet" />*@
    <link href="~/src/scss/bootstrap-dialog/bootstrap-dialog.css" rel="stylesheet" />
    @*<link href="~/src/scss/bootstrap-dialog/bootstrap-dialog.css" rel="stylesheet" />*@
    @*@Styles.Render("~/Content/css")*@
    <link href="~/src/scss/main.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
   

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("File Specifications", "FileSpecifications", "Home")</li>
                    <li>@Html.ActionLink("Assignments", "Assignments", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    @*@Scripts.Render("~/bundles/jquery")*@

    <script src="~/node_modules/jquery/dist/jquery.js"></script>

    @*@Scripts.Render("~/bundles/bootstrap")*@
    <script src="~/node_modules/bootstrap-sass/assets/javascripts/bootstrap.js"></script>
    @*<script src="~/node_modules/bootstrap/dist/js/bootstrap.js"></script>*@
    <!-- DevExtreme library -->
    <script src="~/js/dx-bundle.js"></script>
    @*<script type="text/javascript" src="~/js/dx.all.js"></script>
        <script src="~/js/dx.aspnet.data.js"></script>*@
    <script src="~/js/jquery.serializejson.min.js"></script>
    @*<script src="~/js/bootstrap-dialog.min.js"></script>*@
    <script src="~/node_modules/bootstrap3-dialog/dist/js/bootstrap-dialog.js"></script>
    @*@Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")*@
    @RenderSection("scripts", required: false)
</body>
</html>
